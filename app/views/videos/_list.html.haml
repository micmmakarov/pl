.video-list{ng: {controller: "VideoListCtrl", init: "getData(#{@videos.to_json(include: {user: {only: :name}}, methods: [:votes_count, :voted])})"}}
  .video{ng: {repeat: 'v in videos'}}
    %img{src: "http://img.youtube.com/vi/{{v.youtube_id}}/mqdefault.jpg"}
    .meta
      .name
        {{v.user.name}}
      .vote
        .btn.btn-primary{ng: {click: 'vote(v)'}} vote!
        {{v.votes_count}} {{v.voted}}